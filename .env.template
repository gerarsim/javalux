# Environment Configuration for Luxembourg Compliance Application
# Copy this file to .env and fill in the values

# Database Configuration
DB_PASSWORD=your_secure_password_here

# Application Security
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# GDPR Compliance Settings
DATA_PROTECTION_OFFICER_EMAIL=dpo@yourcompany.lu
PRIVACY_POLICY_URL=https://yourcompany.lu/privacy
COOKIE_CONSENT_REQUIRED=true

# Luxembourg Regulatory Compliance
# CSSF (Commission de Surveillance du Secteur Financier) if applicable
CSSF_REPORTING_ENABLED=false
CSSF_ENTITY_ID=

# CNPD (Commission Nationale pour la Protection des Donn√©es)
CNPD_REGISTRATION_NUMBER=
DATA_BREACH_NOTIFICATION_EMAIL=security@yourcompany.lu

# Audit & Logging
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years minimum for Luxembourg
LOG_LEVEL=INFO
SIEM_INTEGRATION_ENABLED=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=90

# Email Configuration (for compliance notifications)
SMTP_HOST=smtp.yourcompany.lu
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourcompany.lu

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_SESSIONS=5

# Data Retention
PERSONAL_DATA_RETENTION_DAYS=2555
TRANSACTION_DATA_RETENTION_DAYS=3650  # 10 years for financial records

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
ENABLE_XSS_PROTECTION=true
